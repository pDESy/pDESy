{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "pylint.args": [
        "--disable=C0301",  // line-too-long
    ],
    "flake8.args": [
        "--ignore=E203,E501, W503",
        "--max-line-length=88"
    ],
    "cSpell.words": [
        "figsize",
        "LRPT",
        "pdes",
        "pdesy",
        "SRPT",
        "subproject",
        "TSLACK",
        "workamount",
        "xlabel"
    ],
}